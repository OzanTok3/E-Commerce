<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/shape_bg_button_4_radius</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="App.CheckBox.NoTint" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="useMaterialThemeColors">false</item>
        <item name="buttonTint">@null</item>
        <item name="android:buttonTint">@null</item>
        <item name="buttonCompat">@null</item>
    </style>

</resources>